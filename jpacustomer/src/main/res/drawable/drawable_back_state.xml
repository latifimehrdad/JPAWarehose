<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/buttonGradiantEnd"
                android:endColor="@color/buttonGradiantStart"
                android:angle="0"
                />
            <corners android:radius="@dimen/radius3" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/buttonGradiantStart"
                android:endColor="@color/buttonGradiantEnd"
                android:angle="0"
                />
            <corners android:radius="@dimen/radius3" />
        </shape>
    </item>

</selector>

