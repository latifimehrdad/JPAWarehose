<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a_drawable_report_pdf_back">

        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransans_medium"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.2"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewPrice"
            app:layout_constraintTop_toTopOf="parent"
            android:lines="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            app:layout_constraintStart_toEndOf="@id/textViewTotalAmount"
            android:background="@color/textColor"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/iransans_medium"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.15"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6"
            app:layout_constraintStart_toEndOf="@id/textViewTotalAmount"
            app:layout_constraintEnd_toStartOf="@id/textViewCount"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            android:lines="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            app:layout_constraintStart_toEndOf="@id/textViewPrice"
            android:background="@color/textColor"/>

        <TextView
            android:id="@+id/textViewCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/iransans_medium"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6"
            app:layout_constraintStart_toEndOf="@id/textViewPrice"
            app:layout_constraintEnd_toStartOf="@id/textViewProductName"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            android:lines="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            app:layout_constraintStart_toEndOf="@id/textViewCount"
            android:background="@color/textColor"/>

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/iransans_medium"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6"
            app:layout_constraintStart_toEndOf="@id/textViewCount"
            app:layout_constraintEnd_toStartOf="@id/textViewProductCode"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            android:lines="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            app:layout_constraintStart_toEndOf="@id/textViewProductName"
            android:background="@color/textColor"/>

        <TextView
            android:id="@+id/textViewProductCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/iransans_medium"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6"
            android:padding="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@id/textViewProductName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
            android:lines="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
