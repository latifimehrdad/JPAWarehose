<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/a_pageTitle"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/iransans_bold"
            android:text="@string/reports"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/a_cardView3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_ic_wave"
                android:padding="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProfile"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/a_cardView2">

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profile" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textViewShopName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cardViewProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textViewShopAddress"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/a_textHint"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/iransans_light"/>

                <TextView
                    android:id="@+id/textViewShopAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textViewShopName"
                    app:layout_constraintStart_toStartOf="@id/textViewShopName"
                    app:layout_constraintEnd_toEndOf="@id/textViewShopName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/a_textHint"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/iransans_light"/>

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/cardViewProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardViewProfile"
                    app:layout_constraintBottom_toTopOf="@id/textViewUserCode"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/iransans_light"/>

                <TextView
                    android:id="@+id/textViewUserCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textViewName"
                    app:layout_constraintStart_toStartOf="@id/textViewName"
                    app:layout_constraintEnd_toEndOf="@id/textViewName"
                    app:layout_constraintBottom_toTopOf="@id/textViewUserMobile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/iransans_bold"/>

                <TextView
                    android:id="@+id/textViewUserMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textViewUserCode"
                    app:layout_constraintStart_toStartOf="@id/textViewName"
                    app:layout_constraintEnd_toEndOf="@id/textViewName"
                    app:layout_constraintBottom_toBottomOf="@id/cardViewProfile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/iransans_bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewCustomerBalanceReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardViewProfileHeader"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/a_pageTitle"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/iransans_bold"
            android:text="@string/customerBalanceReport"/>

        <TextView
            android:id="@+id/textViewReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textViewCustomerBalanceReport"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/a_textButton"
            android:background="@drawable/a_drawable_back_primary_curve_light"
            android:textSize="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/iransans_light"
            android:text="@string/createPDF"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewReport"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/textViewReport"
            app:layout_constraintBottom_toTopOf="@id/cardViewTotal"
            android:layout_marginVertical="@dimen/_5sdp"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/recyclerViewReport"
            app:layout_constraintBottom_toBottomOf="@id/recyclerViewReport"
            app:layout_constraintStart_toStartOf="@id/recyclerViewReport"
            app:layout_constraintEnd_toEndOf="@id/recyclerViewReport"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/recyclerLoadingBack"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/a_cardView8"
            app:cardCornerRadius="@dimen/_15sdp">

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/a_textButton"
                android:fontFamily="@font/iransans_medium"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

