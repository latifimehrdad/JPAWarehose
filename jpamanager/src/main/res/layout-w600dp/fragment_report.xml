<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@id/tabLayout"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"
            android:background="@drawable/drawable_tab_selected"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:backgroundTint="@android:color/transparent"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:layoutDirection="rtl"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/black"
            app:tabIndicator="@drawable/drawable_tab_selected"
            app:tabBackground="@drawable/tabs_selector"
            app:tabTextAppearance="@style/CustomTabTextAppearance">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hr" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sale" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financial" />


            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hr" />

        </com.google.android.material.tabs.TabLayout>

       <View
           android:id="@+id/viewTab"
           android:layout_width="@dimen/_3sdp"
           android:layout_height="@dimen/_10sdp"
           app:layout_constraintTop_toBottomOf="@id/tabLayout"
           android:background="@drawable/drawable_tab_selected"
           app:layout_constraintEnd_toEndOf="@id/tabLayout"
           android:layout_marginEnd="@dimen/_5sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/tabLayout"
            app:layout_constraintEnd_toEndOf="@id/tabLayout"
            app:layout_constraintTop_toBottomOf="@id/viewTab"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/drawable_border_mini_curve"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/jpaButtonReport"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <com.hoomanholding.jpamanager.view.custom.JpaButton
                android:id="@+id/jpaButtonReport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.17"
                android:background="@drawable/drawable_button_wave"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/iransans_bold"
                android:text="@string/comparativeReport"
                android:layout_margin="@dimen/_10sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
