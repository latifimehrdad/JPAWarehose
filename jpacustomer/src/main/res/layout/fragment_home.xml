<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColorNormal"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/iransans_bold"
            android:text="@string/orderTracking"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/drawable_home_step"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/textViewOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/iransans_light"
                android:textColor="@color/textColorNormal"
                android:text="@string/orderNumber"
                android:background="@drawable/drawable_back_edit"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewOrderNumber"
                app:layout_constraintBottom_toBottomOf="@id/textViewOrderNumber"
                app:layout_constraintEnd_toStartOf="@id/textViewOrderNumber"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/textColorNormal"
                android:text="@string/orderNumber"
                android:fontFamily="@font/iransans_medium"
                android:background="@drawable/drawable_back_edit"
                android:drawableStart="@drawable/ic_play"
                android:drawablePadding="@dimen/_10sdp"/>

            <com.zarholding.jpacustomer.view.custom.CustomStep
                android:id="@+id/stepSendToCustomer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/textViewOrderNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/stepOrderPreparation"
                app:layout_constraintDimensionRatio="H,1:1"
                android:layout_marginTop="@dimen/_10sdp"
                app:step_icon="@drawable/ic_step_send"
                app:step_title="ارسال برای مشتری"/>

            <com.zarholding.jpacustomer.view.custom.CustomStep
                android:id="@+id/stepOrderPreparation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/stepSendToCustomer"
                app:layout_constraintStart_toEndOf="@id/stepSendToCustomer"
                app:layout_constraintBottom_toBottomOf="@id/stepSendToCustomer"
                app:layout_constraintEnd_toStartOf="@id/stepOrderConfirm"
                app:step_icon="@drawable/ic_step_shopping_cart"
                app:step_title="آماده سازی سفارش"/>

            <com.zarholding.jpacustomer.view.custom.CustomStep
                android:id="@+id/stepOrderConfirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/stepSendToCustomer"
                app:layout_constraintStart_toEndOf="@id/stepOrderPreparation"
                app:layout_constraintBottom_toBottomOf="@id/stepSendToCustomer"
                app:layout_constraintEnd_toStartOf="@id/stepReviewQueue"
                app:step_icon="@drawable/ic_step_money_tick"
                app:step_title="تایید سفارش"/>

            <com.zarholding.jpacustomer.view.custom.CustomStep
                android:id="@+id/stepReviewQueue"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/stepSendToCustomer"
                app:layout_constraintStart_toEndOf="@id/stepOrderConfirm"
                app:layout_constraintBottom_toBottomOf="@id/stepSendToCustomer"
                app:layout_constraintEnd_toEndOf="parent"
                app:step_icon="@drawable/ic_step_clock"
                app:step_title="در صف بررسی"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
