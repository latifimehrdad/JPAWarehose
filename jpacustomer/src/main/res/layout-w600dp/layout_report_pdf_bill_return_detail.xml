<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/a_drawable_report_pdf_title2">

    <LinearLayout
        android:id="@+id/linearLayoutSeller"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/textViewBuyerAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/iransans_bold"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/seller"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/iransans_bold"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/buyer"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeH6" />

    </LinearLayout>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/textColor"
        app:layout_constraintBottom_toBottomOf="@id/textViewBuyerAddress"
        app:layout_constraintEnd_toStartOf="@id/linearLayoutSeller"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDetailDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:gravity="end"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toStartOf="@id/textViewDetailPreNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDetailPreNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toStartOf="@id/textViewDetailNumber"
        app:layout_constraintStart_toEndOf="@id/textViewDetailDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDetailNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toStartOf="@id/viewLine1"
        app:layout_constraintStart_toEndOf="@id/textViewDetailPreNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVisitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:gravity="center"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintStart_toStartOf="@id/textViewDetailDate"
        app:layout_constraintTop_toBottomOf="@id/textViewDetailDate" />

    <TextView
        android:id="@+id/textViewSellerAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toEndOf="@id/textViewDetailNumber"
        app:layout_constraintStart_toEndOf="@id/textViewVisitor"
        app:layout_constraintTop_toTopOf="@id/textViewVisitor" />

    <TextView
        android:id="@+id/textViewTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:gravity="center"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintStart_toStartOf="@id/textViewDetailDate"
        app:layout_constraintTop_toBottomOf="@id/viewLine2" />

    <TextView
        android:id="@+id/textViewBuyerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toEndOf="@id/textViewDetailNumber"
        app:layout_constraintStart_toEndOf="@id/textViewTel"
        app:layout_constraintTop_toTopOf="@id/textViewTel" />

    <TextView
        android:id="@+id/textViewBuyerMobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:gravity="end"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toStartOf="@id/textViewStoreName"
        app:layout_constraintStart_toStartOf="@id/textViewDetailDate"
        app:layout_constraintTop_toBottomOf="@id/textViewBuyerName" />

    <TextView
        android:id="@+id/textViewStoreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toStartOf="@id/textViewBuyerCode"
        app:layout_constraintStart_toEndOf="@id/textViewBuyerMobile"
        app:layout_constraintTop_toTopOf="@id/textViewBuyerMobile" />

    <TextView
        android:id="@+id/textViewBuyerCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toEndOf="@id/textViewBuyerName"
        app:layout_constraintStart_toEndOf="@id/textViewStoreName"
        app:layout_constraintTop_toTopOf="@id/textViewBuyerMobile" />

    <TextView
        android:id="@+id/textViewBuyerAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_medium"
        android:lines="1"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintEnd_toEndOf="@id/textViewBuyerName"
        app:layout_constraintStart_toStartOf="@id/textViewDetailDate"
        app:layout_constraintTop_toBottomOf="@id/textViewBuyerMobile" />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSellerAddress" />


    <TextView
        android:id="@+id/textViewTotalAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        android:paddingVertical="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewPrice"
        app:layout_constraintTop_toBottomOf="@id/viewLine3"
        android:lines="1"
        android:text="@string/totalAmount"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        app:layout_constraintStart_toEndOf="@id/textViewTotalAmount"
        android:background="@color/textColor"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/iransans_bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.15"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintStart_toEndOf="@id/textViewTotalAmount"
        app:layout_constraintEnd_toStartOf="@id/textViewCount"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        android:lines="1"
        android:text="@string/fi"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        app:layout_constraintStart_toEndOf="@id/textViewPrice"
        android:background="@color/textColor"/>

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/iransans_bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintStart_toEndOf="@id/textViewPrice"
        app:layout_constraintEnd_toStartOf="@id/textViewProductName"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        android:lines="1"
        android:text="@string/count"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        app:layout_constraintStart_toEndOf="@id/textViewCount"
        android:background="@color/textColor"/>

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/iransans_bold"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        app:layout_constraintStart_toEndOf="@id/textViewCount"
        app:layout_constraintEnd_toStartOf="@id/textViewProductCode"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        android:lines="1"
        android:text="@string/productName"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        app:layout_constraintStart_toEndOf="@id/textViewProductName"
        android:background="@color/textColor"/>

    <TextView
        android:id="@+id/textViewProductCode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/iransans_bold"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSizeH6"
        android:padding="@dimen/_3sdp"
        app:layout_constraintStart_toEndOf="@id/textViewProductName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewTotalAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewTotalAmount"
        android:lines="1"
        android:text="@string/productCode"/>

    <View
        android:id="@+id/viewLine3"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBuyerAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>