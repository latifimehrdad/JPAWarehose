<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/buttonStart"
                android:centerColor="@color/buttonCenter"
                android:endColor="@color/buttonEnd"
                android:angle="180"
                />
            <corners android:radius="5dp" />
            <stroke android:color="@color/hint" android:width="0.5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/buttonEnd"
                android:centerColor="@color/buttonStart"
                android:endColor="@color/buttonCenter"
                android:angle="0"
                />
            <corners android:radius="5dp" />
            <stroke android:color="@color/hint" android:width="0.5dp"/>
        </shape>
    </item>

</selector>

