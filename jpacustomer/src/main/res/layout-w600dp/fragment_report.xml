<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCustomerBalanceReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardViewFactorReport"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/a_cardView3"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a_ic_wave2"
                android:alpha="0.3"
                android:contentDescription="@string/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/iransans_medium"
                android:text="@string/customerBalanceReport"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFactorReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cardViewCustomerBalanceReport"
            app:layout_constraintStart_toEndOf="@id/cardViewCustomerBalanceReport"
            app:layout_constraintEnd_toStartOf="@id/cardViewFeedbackReport"
            app:layout_constraintBottom_toBottomOf="@id/cardViewCustomerBalanceReport"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:cardBackgroundColor="@color/a_cardView3"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a_ic_wave2"
                android:alpha="0.3"
                android:contentDescription="@string/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/iransans_medium"
                android:text="@string/factorReport"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFeedbackReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cardViewCustomerBalanceReport"
            app:layout_constraintStart_toEndOf="@id/cardViewFactorReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cardViewCustomerBalanceReport"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:cardBackgroundColor="@color/a_cardView3"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a_ic_wave2"
                android:alpha="0.3"
                android:contentDescription="@string/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/iransans_medium"
                android:text="@string/feedbackReport"
                />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
